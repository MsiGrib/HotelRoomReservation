@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider Theme="@_mudTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="custom-layout">

    <NavPanel @bind-IsOpen="_navOpen" />

    <MudMainContent Class="main-content">
        <MudSnackbarProvider />
        @Body
    </MudMainContent>
</MudLayout>

<style>
    .custom-layout {
        position: relative;
        height: 100vh;
    }

    .main-content {
        width: 100%;
        height: 100%;
    }
</style>